      </p>
      <? if (isset($this->parseError)): ?>
        <p class="alert alert-danger"><?=$this->transEsc('nohit_parse_error')?></p>
      <? endif; ?>
    <? foreach (($top = $this->results->getRecommendations('top')) as $current): ?>
